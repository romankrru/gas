.slider
  height 461px
  position relative
  z-index 1
  &__item
    width 100%
    height 100%
    color #fff
    position absolute
    transition all 1000ms ease-in-out
    opacity 0
    &_active
      opacity 1
      z-index 1
  &__content
    top 50%
    width 100%
    padding 0 3em
    position absolute
    transform translateY(-50%)
  &__image
    width 100%
    height 100%
    display block
    object-fit cover
  &__title
    margin-top 1em
    margin-bottom 0
    font-size 30px
    font-weight 600
    line-height 1.375
    text-transform uppercase
  &__description
    margin-top 1.05em
    margin-bottom 1.5em
    font-size 20px
    line-height 1.65
  &__pointers
    left 50%
    bottom 0
    position absolute
  &__match
  &__location
    bottom 1.5rem
    position absolute
    z-index 1
  &__match
    width 2px
    height 14px
    display block
    background #fff
    transition height .3s cubic-bezier(.11,.7,0,1)
    &:hover
    &_active
      height 28px
  &__location
    right 3rem