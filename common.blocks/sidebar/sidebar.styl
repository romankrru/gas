.sidebar
  width 100%
  margin 0
  padding 0
  &__checklist
    margin-top 0.6em
    margin-left -0.25em
    position absolute
    opacity 0
    cursor default
    transition opacity 200ms ease
    & .checkbox__label
      font-weight 600
      opacity .65
      transition all 200ms ease-in-out
      &:hover
        opacity 1
  &__producer
    font-size 18px
    font-weight 600
    letter-spacing 0.5px
    text-transform uppercase
    display block
    cursor pointer
  &__list
    width 100%
    & > .list__item
      user-select none
      margin-bottom 1.65em
      padding-left 2em
      position relative
      &:before
        content '+'
        top 1px
        left 0
        width 21px
        font-size 2.2rem
        line-height 18px
        text-align center
        position absolute
        display block
      &_active 
        &:before
          content '\2013'
          top -2px
        & > .sidebar__checklist
          opacity 1