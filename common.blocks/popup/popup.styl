.popup
  top 50%
  left 50%
  position absolute
  transform translate(-50%,-50%)
  z-index 101
  &__content
    width 100%
    height 100%
    min-width 810px
    background #fff
  &__closer
    top 2.83em
    right 2.67em
    width 30px
    height @width
    display block
    background url('../img/times-dark.png') no-repeat
    position absolute
  &__wrapper
    top 0
    left 0
    width 100%
    height 100%
    position fixed
    z-index 100