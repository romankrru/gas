.form
  width 100%
  padding 3.9em
  display block
  line-height 1.429  
  font-family $fontLato
  &__title
    margin 0
    text-transform uppercase
  &__input
    width 100%
    margin 0 0.75em
    margin-bottom 1em
    padding 1.35em 0.75em
    font-size 14px
    font-weight bolder
    color #343637
    background none
    display block
    border none
    border-bottom 1px solid
    &::placeholder
      color #343637
  &__paragraph
    margin-bottom 0
    font-size 14px
  &__checkbox
    margin 2em 0.75em
    margin-bottom 1.25em
    & .checkbox__label
      opacity 0.651
      &:before
        top 0
        transform none
