.button
  font inherit
  color inherit
  cursor pointer
  display inline-block
  text-align center
  text-decoration none
  background none
  outline none
  border none
  &_theme
    &_snow
    &_coal
      width 245px
      padding 0.62em 1.75em
      font-size 18px
      font-weight bold
      text-transform uppercase
      border-radius 1.75em
    &_snow
      color #161426
      background #fff
    &_coal
      color #fff
      background #343637
      box-shadow 2px 7px 13px rgba(0,8,6,.22)
  &__inner
    display block
    &_dashed
      border-bottom 1px dashed
  &__line
    width 100%
    height 2px
    border none
    background #343637