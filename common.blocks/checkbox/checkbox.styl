.checkbox
  margin 0.75em 0
  &_transparent
    margin-top 1em
    margin-bottom 0
    opacity 0.65
  &__input
    display none
  &__label
    padding-left 2.25em
    font-size 14px
    cursor pointer
    position relative
    user-select none
    display block
    &:before
      content ''
      top 50%
      left 0
      width 16px
      height @width
      display block
      border 1px solid
      border-radius 2px
      position absolute
      transform translateY(-50%)
  &__input:checked + &__label
    opacity 1
    &:before
      background url('../img/check-mark.png') no-repeat
      background-position center
  &__input_transparent:checked + &__label
    font-weight 400
    &:before
      background url('../img/check-mark-white.png') no-repeat
      background-position center