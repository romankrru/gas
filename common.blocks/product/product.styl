@keyframes flip
  from
    opacity 0
    transform translateY(10%)
  top
    opacity 1
    transform translateY(0)

.product
  &__vendor-code
    font-size 14px
  &__image
    height 242px
    margin 1em auto
    display block
  &__list
    width 190px
    font-size 14px
    & > .list__item
      line-height 1.75 !important
      padding-left 2em !important
  &__details
    top 2.35rem
    left 0
    width 100%
    padding-top 0.5rem
    padding-left 1.85rem
    background #fff
    position absolute
    transform translateY(100%)
    transition all 300ms ease-in
  &__tile
    padding-top 2.35rem
    padding-bottom 56px
    background #fff
    box-shadow 0 2px 5px rgba(0,0,0,.22)
    transition all 300ms ease-in-out
    position relative
    overflow hidden
    &:hover
      box-shadow 0 6px 18px rgba(0,0,0,.22)
      & .product
        &__details
          transform translateY(0)
        &__list    
          animation flip 600ms ease-out 300ms both
        &__price
          display none
        &__link
          display block
      
  &__tools
    left 0
    bottom 0
    width 100%
    height 56px
    padding-left 1.85rem
    background #fff
    position absolute
  &__button
    top 50%
    right 1.25rem
    width 36px
    height @width
    border 2px solid #343637
    margin-top -18px
    border-radius 50%
    background #fff
    position absolute
    transition all 500ms ease
    & > .button__icon
      font-size 2.2em
      line-height 31px
      display inline-block
    &:hover
      color #fff
      background #343637
  &__name
  &__price
    font-size 18px
    font-weight 600 
    text-transform uppercase
  &__name
    letter-spacing 0.5px
  &__price
    &:after
      content ''
      width 10px
      height @width
      margin-left 0.4em
      display inline-block
      background url('../img/RUB.png') no-repeat
  &__link
    display none
    border-bottom 1px solid
    font-size 14px
    font-weight 600
  &__price
  &__link
    top 50%
    position absolute
    transform translateY(-50%)
  &__header
    top 1.35rem
    left 0
    width 100%
    position absolute
  &__label
    padding-left 1.85rem
    padding-right 1em
    display inline-block
    font-size 14px
    font-weight bold
    text-transform uppercase
    background #fff
    position relative
  &__line
    top 50%
    width 100%
    height 1px
    margin 0
    border none
    background #343637
    position absolute