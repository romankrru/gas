.banner
  width 100%
  height 360px
  overflow hidden
  position relative
  z-index 1
  &_bg
    &_1
      background url('../img/bg-2.jpg') no-repeat
      background-size 100%
      background-attachment fixed
    &_2
      background url('../img/bg-3.jpg') no-repeat
      background-size 100%
      background-attachment fixed
    &_3
      background url('../img/bg-4.jpg') no-repeat
      background-size 100%
      background-attachment fixed
  &__inner
    top 56%
    left 50%
    position absolute
    transform translate(-50%,-50%)
  &__breadcrumbs
    margin-top 1rem
    color #fff
    font 18px $fontLight
    font-weight 300
    line-height 1.111
  &__title
    margin 0
    color #fff
    font-size 30px
    font-weight 600
    line-height 1.333
    letter-spacing 1.5px
    text-transform uppercase
    text-align center
