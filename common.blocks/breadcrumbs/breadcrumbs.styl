.breadcrumbs
  letter-spacing 0.5px
  &__item
    padding 0 1em
    float left
    display block
    position relative
    &:not(:last-of-type)
      &:after
        content '/'
        top 3px
        right 0
        display block
        position absolute
        transform translateX(50%)
  &__link
    line-height 1.4
    text-align center
    transition color .3s cubic-bezier(0.11, 0.7, 0, 1)
    position relative
    overflow hidden
    display block
    &:after
      content ''
      left 0
      bottom 0
      width 100%
      height 1px
      display block
      background-color #fff
      transform translate3d(-101%,0,0)
      transition transform .3s cubic-bezier(0.11, 0.7, 0, 1)
      position absolute
    &:hover:after
      transform translate3d(0,0,0)