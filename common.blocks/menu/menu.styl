.menu
  top 0
  left 0
  width 100%
  height 100vh
  background url('../img/menu.png')
  position fixed
  display none
  z-index 1
  &__inner
    top 50%
    width 100%
    color #fff
    font-size 14px
    line-height 1.55
    position absolute
    transform translateY(-50%)
  &__subtitle
    margin 0
    margin-bottom 0.5em
    font-size 18px
    text-transform uppercase
    position relative
    &:before
      content ''
      top 0
      left -1.65em
      width 2px
      height 42px
      position absolute
      background #fff
      display block
  &__list
    font-size 30px
    font-weight 700
    text-transform uppercase
    & .list__link
      border-left 3px solid transparent
      &:hover
      &_active
        border-left 3px solid #fff
  &__closer
    top 50%
    right 4%
    width 30px
    height @width
    background url('../img/times.png')
    position absolute
    transform translateY(-50%)