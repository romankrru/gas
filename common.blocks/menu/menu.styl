.menu
  top 0
  left 0
  width 100%
  height 100%
  background rgba(51,54,55,0.65)
  position fixed
  display none
  z-index 1
  &__inner
    top 50%
    width 100%
    color #fff
    font-size 14px
    line-height 1.55
    position absolute
    transform translateY(-50%)
  &__subtitle
    margin 0
    margin-bottom 0.5em
    font-size 18px
    text-transform uppercase
    position relative
    &:before
      content ''
      top 0
      left -1.65em
      width 2px
      height 42px
      position absolute
      background #fff
      display block
  &__list  
    font-size 30px
    font-weight 700
    text-transform uppercase
    & .list__link
      padding-left 1em
      color #fff
      position relative
      overflow hidden
      transition color .3s cubic-bezier(0.11, 0.7, 0, 1)
      &:after
        content ''
        top 0
        left 0
        width 4px
        height 100%
        background-color #fff
        border-left 1px solid #222
        transform translate3d(0,-101%,0)
        transition transform .3s cubic-bezier(0.11, 0.7, 0, 1)
        position absolute
        display block
      &_active, &:hover
        &:after
          transform: translate3d(0,0,0)
  &__closer
    top 50%
    right 4%
    width 30px
    height @width
    background url('../img/times.png')
    position absolute
    transform translateY(-50%)