.article
  &__content
    width (800% / 9)
  &__title
    margin-top 0
    font-size 18px
    font-weight bold
    text-transform uppercase
    &_pad
      margin-top 2em
      margin-bottom 0.5em
      height 3em
  &__subtitle
    margin-top 2.35em
    margin-bottom 1.25em
    font-size 18px
    line-height 1.333
    text-transform uppercase
    letter-spacing 0.5px
  &__announcement
    margin-top 0
    font-size 20px
    font-weight 500
    line-height 1.5
  &__paragraph
    margin 0.75em 0
    font-size 14px
    line-height 1.6
  &__link
    color #5b9ecf
    border-bottom 1px solid
  &__pic-wrap
    padding-right 2rem
  &__pic
    width 100%
    height 178px
    object-fit cover
    display block
    &_full
      width 100%
    &_main
      width 540px
      height 377px
      margin 2em auto
  &_preview
    &_row
      margin-bottom 40px
    &_tile
      padding-right 2em
  &__note 
    margin 1.35rem 0
    padding 0.35rem 3rem
    font-size 14px
    font-style italic
    line-height 1.429
    border-left 2px solid
  &__list
    margin 1.35rem 0
    font-size 14px
  &__button
    width 324px
    box-shadow 6.582px 6.138px 13px 0px rgba(0, 8, 6, 0.22)
  &__tools
    margin-top 2.75em
    margin-bottom 2em
    display flex
    justify-content space-between
  &__float
    &-left
      padding 1em 0
    &-right
      padding-left 2.25em